<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" media="all" href="@Url.Content("~/Content/css/bootstrap.min.css")" />
    <style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>
    <meta name="viewport" content="width=device-width; initial-scale=1" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.2.min.js")" type="text/javascript"></script>
    <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
    <script src="http://platform.twitter.com/anywhere.js?id=YOUR_API_KEY&v=1" type="text/javascript"></script>
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js">
        { lang: 'pt-BR' }
    </script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span class="icon-bar"></span>
                    <span class="icon-bar"></span><span class="icon-bar"></span></a>
                @Html.ActionLink("DevDay 2012", "Index", "Home", new { id = "home" }, new { @class = "brand" })
                <div class="nav-collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Palestras", "Index", "Palestras")</li>
                        <li>@Html.ActionLink("Inscrições", "Index", "Inscricoes")</li>
                        <li>@Html.ActionLink("Local", "Index", "Local")</li>
                        <li>@Html.ActionLink("Agenda", "Index", "Agenda")</li>
                        <li>@Html.ActionLink("Patrocínio", "Index", "Patrocinio")</li>
                        <li>@Html.ActionLink("Divulgue", "Index", "Divulgue")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr>
        <footer>
            <p>
                &copy; DevIsland 2012</p>
        </footer>
    </div>
</body>
</html>