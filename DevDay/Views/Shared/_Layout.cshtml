<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" media="all" href="@Url.Content("~/Content/Site.css")" />
    <meta name="viewport" content="width=device-width; initial-scale=1"/>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
    <script src="http://platform.twitter.com/anywhere.js?id=YOUR_API_KEY&v=1" type="text/javascript"></script>
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js">
        { lang: 'pt-BR' }
    </script>
</head>
<body>
    <header>
        <div id="logo">
            <a href="/">
            <img src="../../Content/Images/DevIsland.png" alt="DevIsland Logo" />
            </a>
        </div>
        <div id="title">
            <h1>DevDay</h1>
            <h2>2011</h2>
            <h2>27/08</h2>
        </div>
    </header>
    <nav>
        <ul id="menu">
            <li>@Html.ActionLink("Local", "Index", "Local")</li>
            <li>@Html.ActionLink("Inscreva-se", "Index", "Inscricoes")</li>
            <li>@Html.ActionLink("Palestrantes", "Index", "Palestrantes")</li>
            <li>@Html.ActionLink("Patrocínio", "Index", "Patrocinio")</li>
            <li>@Html.ActionLink("Divulgue", "Index", "Divulgue")</li>
        </ul>
    </nav>
    <section id="main">
        @RenderBody()
        <br />
        <p><g:plusone></g:plusone><a href="http://twitter.com/share" class="twitter-share-button">Tweet</a></p>
        <iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fdevday.devisland.com%2F" scrolling="no" frameborder="0" style="height: 62px; width: 100%" allowTransparency="true"></iframe>
    </section>
    <footer class="small">
    <p><a href="https://twitter.com/DevIsland" class="twitter-follow-button">Siga o @@DevIsland</a></p>
    <p><strong>2011 - DevDay - DevIsland - Código fonte no <a href="http://bitbucket.org/douglasaguiar/devday2011">bitbucket</a>.</strong></p>
    </footer>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-11685238-1']);
        _gaq.push(['_setDomainName', '.devisland.com']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
    <script type="text/javascript">

        twttr.anywhere(function (T) {
            T("#main").hovercards();
        });
 
    </script>
</body>
</html>
