@model DevDay.Models.VM.Credential
@{
    ViewBag.Title = "DevDay 2012 - Belo Horizonte #DevDay - Autentique-se";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section js {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"
        type="text/javascript"></script>
    <script type="text/javascript">
        $('#myModal').modal({ show: false })
    </script>
}
@section footerpatrocinio
{
    @Html.Partial("FooterPatrocinio")
}
<div class="hero-unit">
    <h1>Autentique-se</h1>
    <h3>Se já se inscreveu informe o e-mail utilizado no PagSeguro</h3>
</div>
<div class="row home-columns">
    <div class="span4 home-column clearfix">
        <i class="icon-download-alt pull-left"></i>
        <div class="content">
            <fieldset>
                <legend>Regras e Material de Apoio</legend>
                <p>
                    Clique <a href="@Url.Content("~/Content/download/RegrasOficiais.pdf")">aqui</a>
                    para fazer o download das regras oficiais ou <a href="#myModal" role="button" data-toggle="modal">aqui</a> para acessar o material de apoio.
                </p>
            </fieldset>
        </div>
    </div>
    <div class="span4 home-column clearfix">
        <i class="icon-search pull-left"></i>
        <div class="content">
            <fieldset>
                <legend>Solicitar senha de acesso</legend>
                @using (Html.BeginForm("SendPassword", "Account", FormMethod.Post))
                {
                    <div>
                        @Html.LabelFor(model => model.Email)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Email)
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <p>
                        <input type="submit" value="Solicitar senha de acesso" class="btn btn-info" />
                    </p>
                }
            </fieldset>
        </div>
    </div>
    <div class="span4 home-column clearfix">
        <i class="icon-user pull-left"></i>
        <div class="content">
            <fieldset>
                <legend>Autenticar-se</legend>
                @using (Html.BeginForm("Authenticate", "Account", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)

                    <div>
                        @Html.LabelFor(model => model.Email)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Email)
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Password)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Password)
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <p>
                        <input type="submit" value="Entrar" class="btn btn-primary btn-info" />
                    </p>
                }
            </fieldset>
        </div>
    </div>
</div>
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true" style="display: none">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            ×</button>
        <h3 id="myModalLabel">Material de apoio</h3>
    </div>
    <div class="modal-body">
        <ul>
            <li><a href="http://www.microsoftvirtualacademy.com/tracks/introducao-ao-desenvolvimento-para-windows-8"
                target="_blank">Realização da academia de Windows 8 do MVA – Microsoft Virtual Academy.</a></li>
            <li><a href="http://msdn.microsoft.com/PT-BR/library/windows/apps" target="_blank">Aprenda
                a criar aplicativos estilo Metro</a>.</li>
            <li><a href="http://msdn.microsoft.com/pt-br/windows/apps" target="_blank">Estudar os
                artigos do guia de apps</a></li>
            <li><a href="http://supermetroquiz.codeplex.com" target="_blank">Estudar o código fonte disponível no codeplex.</a></li>
            <li><a href="http://msdn.microsoft.com/library/windows/apps/hh779072" target="_blank">Leia o material sobre como projetar UX para aplicativos</a></li>
            <li><a href="http://code.msdn.microsoft.com/windowsapps" target="_blank">Estudar exemplos
                de código.</a></li>
        </ul>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">
            Fechar</button>
    </div>
</div>
@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
{
    <div class="row">
        <div class="span12 alert">
            @ViewBag.Message
        </div>
    </div>
}