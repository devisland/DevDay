@model DevDay.Models.VM.Credential
@{
    ViewBag.Title = "DevDay 2012 - Belo Horizonte #DevDay - Troca de senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section js {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"
        type="text/javascript"></script>
}
@section footerpatrocinio
{
    @Html.Partial("FooterPatrocinio")
}

<div class="hero-unit">
    <h1>Troca de senha</h1>
</div>
<div class="row">
    <div class="span12">
        @Html.Partial("Menu")
    </div>
</div>
<div class="row">
    <div class="span12">
        <fieldset>
            <legend>Informe a nova senha</legend>
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true)

                <div>
                    @Html.LabelFor(model => model.Password)
                </div>
                <div>
                    @Html.EditorFor(model => model.Password)
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                <p>
                    <input type="submit" value="Confirmar mudança de senha" class="btn btn-primary btn-info" />
                </p>
            }
        </fieldset>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
{
    <div class="row">
        <div class="span12 alert">
            @ViewBag.Message
        </div>
    </div>
}